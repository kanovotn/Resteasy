<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.jboss.resteasy-ts</groupId>
        <artifactId>providers-pom</artifactId>
        <version>2.3.7.Final</version>
	    <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>resteasy-jaxb-provider</artifactId>
    <packaging>jar</packaging>
    <name>Resteasy JAXB Provider test</name>

	<profiles>
		<profile>
			<!-- override properties inherited from parents for test of productized bits -->
			<id>productized</id>
			<activation>
				<property>
					<name>productized</name>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.sun.istack</groupId>
					<artifactId>istack-commons-runtime</artifactId>
					<version>${versions.com.sun.istack.istack-commons-runtime}</version>
					<scope>test</scope>
				</dependency>
				<dependency>
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
					<version>2.9.1-redhat-4</version>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<!-- exclude integrations tests which are known to fail-->
			<id>exclude-tests-known-failures</id>
			<activation>
				<property>
					<name>exclude-tests-known-failures</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<excludes combine.children="append">
								<exclude>org/jboss/resteasy/test/providers/jaxb/regression/TestBadContentType.java</exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

    <dependencies>
        <dependency>
            <groupId>org.jboss.resteasy-ts</groupId>
            <artifactId>resteasy-test</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-jaxb-provider</artifactId>
            <version>${versions-test.org.jboss.resteasy}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>


</project>
