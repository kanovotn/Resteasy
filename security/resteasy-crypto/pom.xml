<?xml version="1.0"?>
<project>
    <parent>
        <groupId>org.jboss.resteasy-ts</groupId>
        <artifactId>resteasy-jaxrs-all</artifactId>
        <version>2.3.7.Final</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>resteasy-crypto</artifactId>
    <name>RESTEasy Crypto test</name>

    <dependencies>

        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-crypto</artifactId>
            <version>${versions.org.jboss.resteasy}</version><!-- only upstream -->
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.jboss.resteasy-ts</groupId>
            <artifactId>resteasy-test</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-jaxb-provider</artifactId>
            <version>${versions-test.org.jboss.resteasy}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>eagledns-fork</artifactId>
            <version>${versions.org.jboss.resteasy}</version><!-- only upstream -->
            <scope>test</scope>
        </dependency>

    </dependencies>

	<profiles>
		<profile>
			<!-- exclude integrations tests which are known to fail-->
			<id>exclude-tests-known-failures-BC</id>
			<activation>
				<property>
					<name>exclude-tests-known-failures-BC</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<excludes combine.children="append">
								<!-- requires jdk with unlimited cryptography without BouncyCastle JCE provider  -->
								<exclude>org/jboss/resteasy/test/security/smime/EnvelopedTest.java</exclude>
								<exclude>org/jboss/resteasy/test/security/smime/IntegrationTest.java</exclude>
								<exclude>org/jboss/resteasy/test/security/smime/SignedTest.java</exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
